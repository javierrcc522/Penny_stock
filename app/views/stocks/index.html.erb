
<div class="container"><br>
  <form>
    <%= form_tag("/stocks", method: "get") do %>
    <p><%= label_tag("Search for:") %></p>
    <%= text_field_tag(:ticker) %>
    <%= submit_tag"Search", class: 'button' %>
    <% end %>
  </form><br>
 <div class="row">
    <% if @price && @detail%>
    <div class="col-sm-6">
      <h2><%= @price["symbol"] %></h2><hr>
      <p>Open</p>
      <h2>$<div id="odometer7" class="odometer"></div></h2><hr>
      <p>Today's High</p>
      <h2>$<div id="odometer8" class="odometer"></div></h2><hr>
      <p>Today's Low</p>
      <h2>$<div id="odometer9" class="odometer"></div></h2><hr>
      <p>52 Wk High</p>
      <h2>$<div id="odometer10" class="odometer"></div></h2><hr>
      <p>52 Wk Low</p>
      <h2>$<div id="odometer11" class="odometer"></div></h2><hr>
    </div>
    <div class="col-sm-6">
      <h2>$<div id="odometer1" class="odometer"></div></h2><hr>
      <p>Volume</p>
      <h2>$<div id="odometer2" class="odometer"></div></h2><hr>
      <p>Average Volume</p>
      <h2>$<div id="odometer3" class="odometer"></div></h2><hr>
      <p>Market Cap</p>
      <h2>$<div id="odometer4" class="odometer"></div></h2><hr>
      <p>P/e Ratio</p>
      <h2>$<%= @detail["results"].first["pe_ratio"] %></h2><hr>
      <p>Div yield</p>
      <h2>$<%= @detail["results"].first["dividend_yield"] %></h2><hr>
    </div>
    <div class="row">
      <div class="col-md-12">
        <p><%= @detail["results"].first["description"] %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= render 'odometer' %>
