<!DOCTYPE html>
<html>
  <head>
    <title>PennyStock</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar">
      <% if @input && @detail  %>
      <h1><%= @input['results'].first["name"] %></h1> <p><%= @detail['results'].first['ceo'] %></p>

      <% end %>
    </nav>
    <%= yield %>

  </body>
</html>
